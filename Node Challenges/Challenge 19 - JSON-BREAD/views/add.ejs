<%- include('header'); -%>
<div class="container">
    <h1>BREAD-JSON</h1>
    <label for="">
        <h3>Tambah Data</h3>
    </label>

    <form action="" method="post">
        <label for="string">
            <h4>String</h4>
        </label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id='string' placeholder="String" name='string'>
        </div>

        <label for="integer">
            <h4>Integer</h4>
        </label>
        <div class="input-group mb-3">
            <input type="number" class="form-control" id='integer' placeholder="Integer" name="integer">
        </div>

        <label for="float">
            <h4>Float</h4>
        </label>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id='float' placeholder="Float" name='float'>
        </div>

        <label for="date">
            <h4>Date</h4>
        </label>
        <div class="input-group mb-3">
            <input placeholder="Start Date" class="form-control" type="text" onfocus="(this.type='date')"
                onblur="(this.value == '' ? this.type='text' : this.type='date')" id="date" name='date'>
        </div>

        <label for="boolean">
            <h4>Boolean</h4>
        </label>
        <div class="input-group mb-3">
            <select id="inputState" class="form-control" name="boolean">
                <option selected disabled>Choose...</option>
                <option value='true'>true</option>
                <option value='false'>false</option>
            </select>
        </div>

        <button type="submit" class="btn btn-outline-primary">Tambah</button>
    </form>
<%- include('footer'); -%>